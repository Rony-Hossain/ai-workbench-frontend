{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "target": "es2022",
    "baseUrl": ".",
    "customConditions": ["@ai-workbench-frontend/source"],
    "paths": {
      "@ai-workbench-frontend/bounded-contexts": ["libs/shared/bounded-contexts/src/index.ts"],
      "@ai-workbench-frontend/database": ["libs/shared/database/src/index.ts"]
    }
  }
}
