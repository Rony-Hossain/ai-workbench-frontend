{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "target": "es2022",
    "baseUrl": ".",
    "customConditions": ["@ai-workbench-frontend/source"],
    "paths": {
      "@ai-workbench/*": ["libs/*/src/index.ts", "libs/shared/*/src/index.ts", "libs/feature-*/src/index.ts"],
      "@ai-workbench/shared/database/client": ["libs/shared/database/src/client-browser.ts"],
      "@ai-workbench-frontend/bounded-contexts": ["libs/shared/bounded-contexts/src/index.ts"],
      "@ai-workbench-frontend/database": ["libs/shared/database/src/index.ts"],
      "@ai-workbench/feature-settings": ["libs/feature-settings/src/index.ts"],
      "@ai-workbench/feature-ai-provider-hub": ["libs/feature-ai-provider-hub/src/index.ts"],
      "@ai-workbench/rag-core": ["libs/rag-core/src/index.ts"],
      "@ai-workbench/rag-fs-ingest": ["libs/rag-fs-ingest/src/index.ts"]
    }
  }
}
